#include <iostream>

template <typename T>
class SimpleVector {
private:
    T* data;           // 데이터를 저장할 배열
    size_t currentSize; // 현재 원소 개수
    size_t maxCapacity; // 배열의 최대 크기

public:
    // 기본 생성자
    SimpleVector() {
        currentSize = 0;
        maxCapacity = 10;
        data = new T[maxCapacity];
    }

    // 크기를 지정하는 생성자
    SimpleVector(size_t capacity) {
        currentSize = 0;
        maxCapacity = capacity;
        data = new T[maxCapacity];
    }

    // 소멸자
    ~SimpleVector() {
        delete[] data;
    }

    // 원소 추가
    void push_back(const T& element) {
        if (currentSize < maxCapacity) {
            data[currentSize] = element;
            currentSize++;
        } else {
            std::cout << "No more space to add elements!\n";
        }
    }

    // 마지막 원소 제거
    void pop_back() {
        if (currentSize > 0) {
            currentSize--;
        } else {
            std::cout << "No elements to remove!\n";
        }
    }

    // 현재 원소 개수 반환
    size_t size() const {
        return currentSize;
    }

    // 배열의 크기 반환
    size_t capacity() const {
        return maxCapacity;
    }

    // 원소 접근 (테스트 용도)
    T& operator[](size_t index) {
        if (index >= currentSize) {
            throw std::out_of_range("Index out of range");
        }
        return data[index];
    }
};

int main() {
    SimpleVector<int> vec; // int 타입의 벡터 생성

    vec.push_back(10);
    vec.push_back(20);
    vec.push_back(30);

    std::cout << "Size: " << vec.size() << "\n";
    std::cout << "Capacity: " << vec.capacity() << "\n";

    vec.pop_back();
    std::cout << "Size after pop_back: " << vec.size() << "\n";

    for (size_t i = 0; i < vec.size(); ++i) {
        std::cout << "Element " << i << ": " << vec[i] << "\n";
    }

    return 0;
}