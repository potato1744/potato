#include <iostream>

using namespace std;

// 합계를 계산하는 함수
double calculateSum(double num1, double num2, double num3, double num4, double num5) {
    return num1 + num2 + num3 + num4 + num5;
}

// 평균을 계산하는 함수
double calculateAverage(double total, int count) {
    return total / count;
}

int main() {
    double score1, score2, score3, score4, score5;

    // 사용자로부터 5개의 숫자 입력받기
    cout << "1 번째 숫자를 입력해주세요: ";
    cin >> score1;

    cout << "2 번째 숫자를 입력해주세요: ";
    cin >> score2;

    cout << "3 번째 숫자를 입력해주세요: ";
    cin >> score3;

    cout << "4 번째 숫자를 입력해주세요: ";
    cin >> score4;

    cout << "5 번째 숫자를 입력해주세요: ";
    cin >> score5;

    // 합계 계산
    double total = calculateSum(score1, score2, score3, score4, score5);

    // 평균 계산
    double average = calculateAverage(total, 5);

    // 결과 출력
    cout << "합계: " << total << endl;
    cout << "평균: " << average << endl;

    return 0;
